<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_recommendation_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/text_recommendation_date"
        android:fontFamily="@font/roboto_medium"
        android:textColorLink="@color/Red5"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Indian Chaat Cafe" />

    <TextView
        android:id="@+id/text_recommendation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        tools:text="03/24/2018" />

    <TextView
        android:id="@+id/text_recommendation_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_recommendation_delete"
        android:layout_alignStart="@+id/text_recommendation_name"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@+id/image_recommendation_delete"
        android:textSize="18sp"
        tools:text="fawef" />

    <ImageView
        android:id="@+id/image_recommendation_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/text_recommendation_time"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/text_recommendation_date"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_close_black_24dp" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:background="@color/black" />

</RelativeLayout>