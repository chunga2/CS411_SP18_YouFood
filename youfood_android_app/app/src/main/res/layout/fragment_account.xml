<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/edit_account_button"
            android:layout_width="130dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:text="Edit Account"/>

        <TextView
            android:id="@+id/text_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="20dp"
            android:textSize="26sp"
            tools:text="Example User"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/text_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/roboto"
            android:text="example@user.com"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/text_username"
            app:layout_constraintStart_toStartOf="@+id/text_username"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/text_account_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_email"
            app:layout_constraintStart_toStartOf="@id/text_email"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Account Type: "/>

        <TextView
            android:id="@+id/text_account_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/text_account_label"
            app:layout_constraintStart_toEndOf="@id/text_account_label"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:text="User"/>

        <TextView
            android:id="@+id/reviews_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_account_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="26sp"
            android:layout_marginTop="20dp"
            android:text="My Reviews"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/reviews_list"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/reviews_label"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp">
        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/delete_account_button"
            android:layout_width="160dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/reviews_list"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Delete Account" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>